<h2 style="color:blue;">Listado de Productos</h2>
{{#if productos}} 
    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <tr style="color: yellow;">
                <th>Titulo</th>
                <th>Precio</th>
                <th>Foto URL</th>
            </tr>
            {{#each productos}}
                <tr> <td>{{this.title}}</td> <td>${{this.price}}</td> <td><img width="50" src={{this.thumbnail}} alt="not found"></td> </tr>
            {{/each}}
        </table>
    </div>
{{else}}  
    <h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}